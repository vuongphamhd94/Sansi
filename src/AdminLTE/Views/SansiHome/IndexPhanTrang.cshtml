        <input type="text" id="title" placeholder="Nhập loại sản phẩm" />

        <label for="price">Giá sản phẩm</label>
        <input type="text" id="price" placeholder="Nhập giá sản phẩm" />

        <label for="image">Link ảnh sản phẩm</label>
        <input type="text" id="image" placeholder="Nhập Link sản phẩm" />

        <button class="bt bt-color-do" id="btmSubmit">
            <span class="material-icons">
                outbox
            </span>
            <span>
                Submit
            </span>
        </button>
    </div>

</div>

