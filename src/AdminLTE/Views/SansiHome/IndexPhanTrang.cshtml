@using AdminLTE.Models.SansiModels;
@model PhanTrang

@{
    Layout = "_LayoutSansi";
    ViewBag.Title = "Tạo phân trang";
    ViewBag.Type = 1;
    ViewBag.Active = "TrangChu";
}

<div id="PhanTrang">
    @Html.Partial("~/Views/SansiHome/_PhanTrangView.cshtml", Model)
</div>

<div class="btm-form-themSanPham">
    <button class="bt bt-color-xanh">
        <span class="material-icons">
            add_box
        </span>
    </button>
</div>
<div class="form-them-sp">
    <div class="nen"></div>
